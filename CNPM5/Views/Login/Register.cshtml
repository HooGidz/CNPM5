@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "_Layout";  
}


<div class="container register-center">

    <div class="register-box">
        <h3>Tạo tài khoản</h3>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form method="post" asp-action="Register">

            <div class="mb-3">
                <label class="form-label">Mã sinh viên</label>
                <input type="number" name="StudentId" class="form-control" required placeholder="Nhập MSSV..." />
            </div>

            <div class="mb-3">
                <label class="form-label">Tên đăng nhập</label>
                <input type="text" name="Username" class="form-control" required placeholder="Nhập username..." />
            </div>

            <div class="mb-3">
                <label class="form-label">Mật khẩu</label>
                <input type="password" name="Password" class="form-control" required placeholder="Nhập mật khẩu..." />
            </div>

            <button type="submit" class="btn btn-success w-100 btn-register">Đăng ký</button>

            <div class="mt-3 text-center">
                <a href="/Login/Index">Đã có tài khoản? Đăng nhập</a>
            </div>

        </form>
    </div>

</div>
