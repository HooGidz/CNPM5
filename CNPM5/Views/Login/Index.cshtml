@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_Layout"; 
}


<div class="container login-center">
    <div class="login-box">

        <h3>Đăng nhập</h3>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form method="post" asp-controller="Login" asp-action="Index">

            <div class="mb-3">
                <label class="form-label">Tên đăng nhập</label>
                <input type="text" name="username" class="form-control" required placeholder="Nhập username..." />
            </div>

            <div class="mb-3">
                <label class="form-label">Mật khẩu</label>
                <input type="password" name="password" class="form-control" required placeholder="Nhập mật khẩu..." />
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-login">Đăng nhập</button>

            <div class="mt-3 text-center">
                <a href="/Login/Register">Chưa có tài khoản? Đăng ký ngay</a>
            </div>

        </form>
    </div>
</div>
