<!-- Header End -->
<div class="profile-container">
    <div class="profile-header">
        <div class="avatar-wrapper">
			<img src="~/assets/img/team-1.jpg" alt="Ảnh đại diện" class="profile-avatar">
			<div class="status-badge active">Đang ở</div>
        </div>
		
        <h2 style="color:#ffff;" class="student-name">NGUYỄN VĂN A</h2>
        <p class="student-code">MSSV: 21H112001</p>
    </div>

    <button class="edit-toggle-btn" onclick="toggleEditMode()">
        Chỉnh sửa thông tin cá nhân
    </button>

    <div class="info-card personal-info">
        <h3><i class="fas fa-user-alt"></i> Thông Tin Cơ Bản</h3>

        <div class="display-mode">
            <div class="info-grid">
                <div><label>Họ và Tên:</label><p>NGUYỄN VĂN A</p></div>
                <div><label>Mã Sinh Viên:</label><p>21H112001</p></div>
                <div><label>Ngày sinh:</label><p>20/10/2003</p></div>
                <div><label>Giới tính:</label><p>Nam</p></div>
            </div>
        </div>

        <div class="edit-mode hidden">
            <form id="personal-edit-form">
				<div class="info-grid">
                    <div>
                        <label for="fullName">Họ và Tên</label>
                        <input  type="text" id="fullName" value="NGUYỄN VĂN A" required>
                    </div>
                    <div>
                        <label for="studentCode">Mã Sinh Viên (Không sửa)</label>
                        <input type="text" id="studentCode" value="21H112001" readonly>
                    </div>
                    <div>
                        <label for="birthDate">Ngày sinh</label>
                        <input type="date" id="birthDate" value="2003-10-20" required>
                    </div>
                    <div>
                        <label for="gender">Giới tính</label>
                        <select id="gender">
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                        </select>
                    </div>
                </div>

                <h4 class="section-title">Thông Tin Liên Hệ</h4>
                <div class="info-grid">
                    <div>
                        <label for="phone">Điện thoại</label>
                        <input type="tel" id="phone" value="0987 654 321">
                    </div>
                    <div>
                        <label for="email">Email</label>
                        <input type="email" id="email" value="vana.21h@sv.edu.vn">
                    </div>
                    <div class="full-width">
                        <label for="pAddress">Địa chỉ Thường trú</label>
                        <input type="text" id="pAddress" value="Số 1, Phường X, Quận Y" required>
                    </div>
                    <div class="full-width">
                        <label for="tAddress">Địa chỉ Tạm trú</label>
                        <input type="text" id="tAddress" value="Số 5, KTX Nhà H3" required>
                    </div>
                </div>

                <h4 class="section-title">Thông Tin Học Tập</h4>
                <div class="info-grid">
                    <div>
                        <label for="faculty">Khoa</label>
                        <input type="text" id="faculty" value="Công nghệ thông tin">
                    </div>
                    <div>
                        <label for="major">Ngành</label>
                        <input type="text" id="major" value="Kỹ thuật phần mềm">
                    </div>
                    <div>
                        <label for="citizenID">CCCD/CMND</label>
                        <input type="text" id="citizenID" value="012345678901">
                    </div>
                    <div>
                        <label for="accountID">Tài khoản (ID)</label>
                        <input type="text" id="accountID" value="12345" readonly>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="save-btn">Lưu thay đổi</button>
                    <button type="button" class="cancel-btn" onclick="toggleEditMode()">Hủy</button>
                </div>
            </form>
        </div>
    </div>

