@model CNPM5.Models.TblAccount

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Sửa thông tin tài khoản</h1>
<hr />
<div class="row">
    <div class="col-md-4 card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountId" />
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="Username" for="html5-text-input" class="col-md-2 col-form-label">Tên tài khoản</label>
                    <div class="col-md-10">
                        <input asp-for="Username" class="form-control" type="text" id="html5-text-input">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="Password" for="html5-text-input" class="col-md-2 col-form-label">Mật khẩu</label>
                    <div class="col-md-10">
                        <input asp-for="Password" class="form-control" type="text" id="html5-text-input">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="FullName" for="html5-text-input" class="col-md-2 col-form-label">Họ và tên</label>
                    <div class="col-md-10">
                        <input asp-for="FullName" class="form-control" type="text" id="html5-text-input">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="Phone" for="html5-text-input" class="col-md-2 col-form-label">Số điện thoại</label>
                    <div class="col-md-10">
                        <input asp-for="Phone" class="form-control" type="text" id="html5-text-input">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="Email" for="html5-text-input" class="col-md-2 col-form-label">Email</label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" type="text" id="html5-text-input">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="RoleId" for="html5-text-input" class="col-md-2 col-form-label">Phân quyền</label>
                    <div class="col-md-10">
                        <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-select" id="exampleFormControlSelect1" aria-label="Default select example"></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="CreatedDate" for="html5-text-input" class="col-md-2 col-form-label">Email</label>
                    <div class="col-md-10">
                        <input asp-for="CreatedDate" class="form-control" type="date" id="html5-text-input">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="Status" for="html5-text-input" class="col-md-2 col-form-label">Email</label>
                    <div class="col-md-10">
                        <input asp-for="Status" class="form-control" type="text" id="html5-text-input">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Xác nhận" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="margin-left: 10px;">
		<button type="button" class="btn btn-dark">Quay lại</button>
	</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
