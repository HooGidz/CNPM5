@model CNPM5.Models.TblAccount

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Xoá tài khoản</h1>

<h3>Bạn có chắc chắn muốn xoá tài khoản này không?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-md-4 card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AccountId" />
                <div class="form-group">
                    <div class="mb-3 row">
                        <label asp-for="Username" for="html5-text-input" class="col-md-2 col-form-label">Tên tài khoản</label>
                        <div class="col-md-10">
                            <input asp-for="Username" class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="Readonly input here..." readonly="">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="mb-3 row">
                        <label asp-for="Password" for="html5-text-input" class="col-md-2 col-form-label">Mật khẩu</label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="Readonly input here..." readonly="">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="mb-3 row">
                        <label asp-for="FullName" for="html5-text-input" class="col-md-2 col-form-label">Họ và tên</label>
                        <div class="col-md-10">
                            <input asp-for="FullName" class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="Readonly input here..." readonly="">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="mb-3 row">
                        <label asp-for="Phone" for="html5-text-input" class="col-md-2 col-form-label">Số điện thoại</label>
                        <div class="col-md-10">
                            <input asp-for="Phone" class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="Readonly input here..." readonly="">

                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="mb-3 row">
                        <label asp-for="Email" for="html5-text-input" class="col-md-2 col-form-label">Email</label>
                        <div class="col-md-10">
                            <input asp-for="Email" class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="Readonly input here..." readonly="">

                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="mb-3 row">
                        <label asp-for="RoleId" for="html5-text-input" class="col-md-2 col-form-label">Phân quyền</label>
                        <div class="col-md-10">
                            <input asp-for="RoleId" class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="Readonly input here..." readonly="">

                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="mb-3 row">
                        <label asp-for="CreatedDate" for="html5-text-input" class="col-md-2 col-form-label">Email</label>
                        <div class="col-md-10">
                            <input asp-for="CreatedDate" class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="Readonly input here..." readonly="">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="mb-3 row">
                        <label asp-for="Status" for="html5-text-input" class="col-md-2 col-form-label">Trạng thái</label>
                        <div class="col-md-10">
                            <input asp-for="Status" class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="Readonly input here..." readonly="">
                        </div>
                    </div>
                </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AccountId" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a asp-action="Index">
            <button type="button" class="btn btn-dark">Quay lại</button>
        </a>
    </form>
</div>
