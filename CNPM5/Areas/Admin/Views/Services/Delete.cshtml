@model CNPM5.Models.TblService

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Xoá dịch vụ</h1>

<h3>Bạn có chắc chắn muốn xoá dịch vụ này không?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-md-4 card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServiceId" />
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="Name" for="html5-text-input" class="col-md-2 col-form-label">Tên dịch vụ</label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="Readonly input here..." readonly="">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="Unit" for="html5-text-input" class="col-md-2 col-form-label">Đơn vị</label>
                    <div class="col-md-10">
                        <input asp-for="Unit" class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="Readonly input here..." readonly="">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="Price" for="html5-text-input" class="col-md-2 col-form-label">Giá tiền</label>
                    <div class="col-md-10">
                        <input asp-for="Price" class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="Readonly input here..." readonly="">

                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="CreatedAt" for="html5-text-input" class="col-md-2 col-form-label">Ngày tạo</label>
                    <div class="col-md-10">
                        <input asp-for="CreatedAt" class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="Readonly input here..." readonly="">

                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="UpdatedAt" for="html5-text-input" class="col-md-2 col-form-label">Ngày sửa</label>
                    <div class="col-md-10">
                        <input asp-for="UpdatedAt" class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="" readonly="">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ServiceId" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a asp-action="Index">
            <button type="button" class="btn btn-dark">Quay lại</button>
        </a>
    </form>
</div>
