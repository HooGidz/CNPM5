@model IEnumerable<CNPM5.Models.TblService>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Quản lý dịch vụ</h1>

<p>
    <a asp-action="Create">
        <button type="button" class="btn btn-primary">
            <span class="tf-icons bx bx-plus"></span>&nbsp; Thêm dịch vụ
        </button>
    </a>
</p>
<div class="table-responsive text-nowrap">
    <table class="table">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên dịch vụ</th>
                <th>Đơn vị tính</th>
                <th>Giá tiền</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @{
                int i = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    @*<td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@</strong></td> *@
                    <td>@(i++)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.ServiceId"><i class="bx bx-edit-alt me-1"></i> Sửa</a>
                                <a class="dropdown-item" asp-action="Details" asp-route-id="@item.ServiceId"><i class="bx bx-edit-alt me-1"></i> Chi tiết</a>
                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.ServiceId"><i class="bx bx-trash me-1"></i> Xoá</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>