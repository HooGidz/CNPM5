@model CNPM5.Models.TblService

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1>Sửa thông tin dịch vụ</h1>
<hr />
<div class="row">
    <div class="col-md-4 card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServiceId" />
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="Name" for="html5-text-input" class="col-md-2 col-form-label">Tên dịch vụ</label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" type="text" id="html5-text-input">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="Unit" for="html5-text-input" class="col-md-2 col-form-label">Đơn vị tính</label>
                    <div class="col-md-10">
                        <input asp-for="Unit" class="form-control" type="text" id="html5-text-input">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="Price" for="html5-text-input" class="col-md-2 col-form-label">Giá tiền</label>
                    <div class="col-md-10">
                        <input asp-for="Price" class="form-control" type="text" id="html5-text-input">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="mb-3 row">
                    <label asp-for="CreatedAt" for="html5-text-input" class="col-md-2 col-form-label">Ngày tạo</label>
                    <div class="col-md-10">
                        <input asp-for="CreatedAt" class="form-control" type="date" id="html5-text-input" readonly="">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Xác nhận" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="margin-left: 10px;">
        <button type="button" class="btn btn-dark">Quay lại</button>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
