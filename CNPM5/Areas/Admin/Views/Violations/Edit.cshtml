@model CNPM5.Models.Violation

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Sửa vi phạm</h1>

<div class="row">
    <div class="col-md-4 card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ViolationId" />
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Sinh viên</label>
                <select asp-for="StudentId" 
                        asp-items="@(ViewData["StudentId"] as SelectList)" class="form-control">
                    <option value="">--- Chọn Sinh viên ---</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RuleId" class="control-label">Nội quy vi phạm</label>
                <select asp-for="RuleId" 
                        asp-items="@(ViewData["RuleId"] as SelectList)" class="form-control">
                    <option value="">--- Chọn Nội quy ---</option>
                </select>
                <span asp-validation-for="RuleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViolationDate" class="control-label">Ngày vi phạm</label>
                <input asp-for="ViolationDate" class="form-control" />
                <span asp-validation-for="ViolationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label">Ghi chú</label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
