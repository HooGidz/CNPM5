@model CNPM5.Models.TblStudent

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Xóa sinh viên</h1>

<h3>Bạn có chắc chắn xóa sinh viên này không?</h3>
<div>
 
    <hr />
    <div class="row">
        <div class="col-md-4 card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StudentId" />
                <div class="form-group">
                    <label asp-for="StudentCode" class="control-label">Mã SSV</label>
                    <input asp-for="StudentCode" class="form-control" />
                    <span asp-validation-for="StudentCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label">Giới tính</label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate" class="control-label">Năm sinh</label>
                    <input asp-for="BirthDate" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label">SDT</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Faculty" class="control-label">Khoa</label>
                    <input asp-for="Faculty" class="form-control" />
                    <span asp-validation-for="Faculty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Major" class="control-label">Chuyên ngành</label>
                    <input asp-for="Major" class="form-control" />
                    <span asp-validation-for="Major" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CitizenId" class="control-label">CCCD</label>
                    <input asp-for="CitizenId" class="form-control" />
                    <span asp-validation-for="CitizenId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PermanentAddress" class="control-label">Địa chỉ thường trú</label>
                    <input asp-for="PermanentAddress" class="form-control" />
                    <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TemporaryAddress" class="control-label">Địa chỉ tạm trú</label>
                    <input asp-for="TemporaryAddress" class="form-control" />
                    <span asp-validation-for="TemporaryAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AvatarUrl" class="control-label">Ảnh đại diện</label>
                    <input asp-for="AvatarUrl" class="form-control" />
                    <span asp-validation-for="AvatarUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudentStatus" class="control-label">Trạng thái</label>
                    <input asp-for="StudentStatus" class="form-control" />
                    <span asp-validation-for="StudentStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmergencyContactName" class="control-label">Tên người liên hệ</label>
                    <input asp-for="EmergencyContactName" class="form-control" />
                    <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmergencyContactPhone" class="control-label">Sđt người liên hệ</label>
                    <input asp-for="EmergencyContactPhone" class="form-control" />
                    <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AccountId" class="control-label">Mã ID</label>
                    <select asp-for="AccountId" class="form-control" asp-items="ViewBag.AccountId"></select>
                </div>
                
            </form>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="StudentId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại</a>
    </form>
</div>
